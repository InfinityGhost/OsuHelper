<Window x:Class="OsuHelper.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:dragablz="http://dragablz.net/winfx/xaml/dragablz"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        xmlns:ignore="http://www.galasoft.ch/ignore"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="osu!helper v1.2.2"
        Width="780"
        Height="650"
        Background="{DynamicResource MaterialDesignPaper}"
        DataContext="{Binding SetupViewModel,
                              Source={StaticResource Locator}}"
        FontFamily="{DynamicResource MaterialDesignFont}"
        Icon="/OsuRepleh;component/favicon.ico"
        LocationChanged="MainWindow_OnLocationChanged"
        SizeChanged="MainWindow_OnSizeChanged"
        SnapsToDevicePixels="True"
        TextElement.FontSize="13"
        TextElement.FontWeight="Regular"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        WindowStartupLocation="CenterScreen"
        mc:Ignorable="d ignore">

    <Grid>
        <dragablz:TabablzControl x:Name="TabControl">
            <TabItem DataContext="{Binding SetupViewModel, Source={StaticResource Locator}}" Header="Setup">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <ScrollViewer Grid.Row="0"
                                  HorizontalScrollBarVisibility="Disabled"
                                  VerticalScrollBarVisibility="Auto">
                        <StackPanel>
                            <GroupBox Margin="5" Header="Core">
                                <StackPanel>
                                    <TextBlock Margin="5" Text="osu! Username or UserID:" />
                                    <TextBox Margin="5"
                                             FontWeight="SemiBold"
                                             Text="{Binding StagingSettings.UserID,
                                                            UpdateSourceTrigger=PropertyChanged}" />
                                    <TextBlock Margin="5" Text="API provider:" />
                                    <ComboBox Margin="5"
                                              ItemsSource="{Binding AvailableAPIProviders}"
                                              SelectedItem="{Binding StagingSettings.APIProvider}" />
                                    <TextBlock Margin="5"
                                               Text="API key:"
                                               Visibility="{Binding IsAPIKeyRequired,
                                                                    Converter={StaticResource BoolToVisibilityConverter},
                                                                    ConverterParameter=Collapsed}" />
                                    <TextBox Margin="5"
                                             FontWeight="SemiBold"
                                             Text="{Binding StagingSettings.APIKey,
                                                            UpdateSourceTrigger=PropertyChanged}"
                                             Visibility="{Binding IsAPIKeyRequired,
                                                                  Converter={StaticResource BoolToVisibilityConverter},
                                                                  ConverterParameter=Collapsed}" />
                                    <TextBlock Margin="5" Text="Game mode:" />
                                    <ComboBox Margin="5"
                                              ItemsSource="{Binding AvailableGameModes}"
                                              SelectedItem="{Binding StagingSettings.GameMode}" />
                                </StackPanel>
                            </GroupBox>

                            <GroupBox Margin="5" Header="Preferences">
                                <StackPanel>
                                    <CheckBox Margin="5"
                                              Content="Prefer map downloads without video"
                                              IsChecked="{Binding StagingSettings.PreferNoVideo}" />
                                    <CheckBox Margin="5"
                                              Content="Don't suggest, based on plays that are not at least S ranks"
                                              IsChecked="{Binding StagingSettings.OnlyFullCombo}" />
                                    <TextBlock Margin="5" Text="Beatmap preview sound volume:" />
                                    <Slider LargeChange="0.25"
                                            Maximum="1"
                                            Minimum="0"
                                            SmallChange="0.1"
                                            Value="{Binding StagingSettings.PreviewSoundVolume}" />
                                    <TextBlock Margin="5" Text="Difficulty preference (left - easier maps, less PP; right - harder maps, more pp):" />
                                    <Slider LargeChange="0.25"
                                            Maximum="1"
                                            Minimum="0"
                                            SmallChange="0.1"
                                            Value="{Binding StagingSettings.DifficultyPreference}" />
                                    <TextBlock Margin="5" Text="Maximum recommendation count:" />
                                    <TextBox Margin="5"
                                             FontWeight="SemiBold"
                                             Text="{Binding StagingSettings.RecommendationCount,
                                                            UpdateSourceTrigger=PropertyChanged}" />
                                </StackPanel>
                            </GroupBox>
                        </StackPanel>
                    </ScrollViewer>

                    <UniformGrid Grid.Row="1"
                                 Margin="5"
                                 HorizontalAlignment="Center"
                                 VerticalAlignment="Bottom"
                                 Columns="3">
                        <Button Margin="2"
                                Command="{Binding SaveCommand}"
                                Content="Save" />
                        <Button Margin="2"
                                Command="{Binding LoadCommand}"
                                Content="Cancel" />
                        <Button Margin="2"
                                Command="{Binding ResetDefaultsCommand}"
                                Content="Defaults" />
                    </UniformGrid>
                </Grid>

            </TabItem>

            <TabItem DataContext="{Binding RecommenderViewModel, Source={StaticResource Locator}}" Header="Recommended Maps">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <DataGrid x:Name="BeatmapListDataGrid"
                              Grid.Row="0"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              CanUserDeleteRows="False"
                              CanUserResizeRows="False"
                              ColumnWidth="SizeToHeader"
                              HorizontalScrollBarVisibility="Disabled"
                              IsReadOnly="True"
                              ItemsSource="{Binding Recommendations}"
                              MouseLeftButtonUp="BeatmapListDataGrid_MouseLeftButtonUp"
                              SelectedItem="{Binding SelectedRecommendation}"
                              SelectionMode="Single"
                              SelectionUnit="FullRow">
                        <DataGrid.ColumnHeaderStyle>
                            <Style BasedOn="{StaticResource MaterialDesignDataGridColumnHeader}" TargetType="DataGridColumnHeader">
                                <Setter Property="Padding" Value="3" />
                            </Style>
                        </DataGrid.ColumnHeaderStyle>
                        <DataGrid.CellStyle>
                            <Style BasedOn="{StaticResource MaterialDesignDataGridCell}" TargetType="DataGridCell">
                                <Setter Property="Padding" Value="3" />
                            </Style>
                        </DataGrid.CellStyle>

                        <DataGrid.Columns>
                            <DataGridTextColumn Width="*"
                                                Binding="{Binding Beatmap.FullName}"
                                                Header="Name" />
                            <DataGridTextColumn Width="Auto"
                                                Binding="{Binding ModsString}"
                                                Header="Mods" />
                            <DataGridTextColumn Width="Auto"
                                                Binding="{Binding Beatmap.Stars,
                                                                  StringFormat=\{0:N2\}}"
                                                Header="★" />
                            <DataGridTextColumn Width="Auto"
                                                Binding="{Binding Beatmap.BeatsPerMinute,
                                                                  StringFormat=\{0:N0\}}"
                                                Header="BPM" />
                            <DataGridTextColumn Width="Auto"
                                                Binding="{Binding Beatmap.ApproachRate,
                                                                  StringFormat=\{0:N1\}}"
                                                Header="AR" />
                            <DataGridTextColumn Width="Auto"
                                                Binding="{Binding Beatmap.OverallDifficulty,
                                                                  StringFormat=\{0:N1\}}"
                                                Header="OD" />
                            <DataGridTextColumn Width="Auto"
                                                Binding="{Binding Beatmap.HitLengthString}"
                                                Header="Length" />
                            <DataGridTextColumn Width="Auto"
                                                Binding="{Binding ExpectedAccuracy,
                                                                  StringFormat=\{0:P2\}}"
                                                FontWeight="SemiBold"
                                                Header="Accuracy" />
                            <DataGridTextColumn Width="Auto"
                                                Binding="{Binding ExpectedPerformancePoints,
                                                                  StringFormat=\{0:N0\}}"
                                                FontWeight="SemiBold"
                                                Header="PP" />
                            <DataGridTextColumn Width="Auto"
                                                Binding="{Binding Popularity}"
                                                Header="Pop."
                                                SortDirection="Descending" />
                        </DataGrid.Columns>
                    </DataGrid>



                    <Grid Grid.Row="1" Margin="5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <WrapPanel Grid.Column="0"
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Center">
                            <CheckBox Margin="2"
                                      Content="HR"
                                      IsChecked="{Binding HrFilter}"
                                      IsThreeState="True" />
                            <CheckBox Margin="2"
                                      Content="DT"
                                      IsChecked="{Binding DtFilter}"
                                      IsThreeState="True" />
                            <CheckBox Margin="2"
                                      Content="HD"
                                      IsChecked="{Binding HdFilter}"
                                      IsThreeState="True" />
                        </WrapPanel>
                        <TextBlock Grid.Column="1"
                                   Margin="5"
                                   VerticalAlignment="Center"
                                   Text="{Binding Recommendations.Count,
                                                  StringFormat=Total: \{0\}}" />
                        <Button Grid.Column="2"
                                Margin="2"
                                VerticalAlignment="Center"
                                Command="{Binding UpdateCommand}"
                                Content="Update" />
                    </Grid>

                    <ProgressBar Grid.Row="2"
                                 Foreground="{DynamicResource SecondaryAccentForegroundBrush}"
                                 Maximum="1"
                                 Minimum="0"
                                 Visibility="{Binding CanUpdate,
                                                      Converter={StaticResource InvertBoolToVisibilityConverter}}"
                                 Value="{Binding Progress}" />
                </Grid>
            </TabItem>

            <TabItem DataContext="{Binding CalculatorViewModel, Source={StaticResource Locator}}" Header="PP Calculator">
                <StackPanel>
                    <TextBlock Margin="5" FontStyle="Italic">
                        <Run Text="This PP calculator is implementing" />
                        <Hyperlink NavigateUri="https://github.com/Francesco149/oppai" RequestNavigate="Hyperlink_OnRequestNavigate">osu!oppai</Hyperlink>
                        <Run Text="." />
                        <LineBreak />
                        <Run Text="If you find any inconsistencies - please report them to the developers." />
                    </TextBlock>
                    <TextBlock x:Name="CalculatorBeatmapID"
                               Margin="5"
                               Text="Beatmap ID or URL:" />
                    <TextBox Margin="5"
                             FontWeight="SemiBold"
                             Text="{Binding BeatmapID}" />
                    <TextBlock Margin="5" Text="Mods:" />
                    <WrapPanel>
                        <CheckBox Margin="5"
                                  Content="HR"
                                  IsChecked="{Binding HrEnabled}" />
                        <CheckBox Margin="5"
                                  Content="DT"
                                  IsChecked="{Binding DtEnabled}" />
                        <CheckBox Margin="5"
                                  Content="HD"
                                  IsChecked="{Binding HdEnabled}" />
                    </WrapPanel>
                    <Button Margin="5"
                            Command="{Binding AnalyzeCommand}"
                            Content="Analyze Beatmap" />
                    <UniformGrid Columns="2" IsEnabled="{Binding IsAnalyzed}">
                        <WrapPanel VerticalAlignment="Center">
                            <TextBlock Margin="5"
                                       VerticalAlignment="Center"
                                       Text="Accuracy:" />
                            <TextBox Margin="5"
                                     VerticalAlignment="Center"
                                     FontWeight="SemiBold"
                                     Text="{Binding ExpectedAccuracyString,
                                                    UpdateSourceTrigger=PropertyChanged}" />
                            <TextBlock Margin="0,5,5,5"
                                       VerticalAlignment="Center"
                                       Text="%" />
                        </WrapPanel>
                        <Slider x:Name="CalculatorExpectedAccuracySlider"
                                Margin="5"
                                VerticalAlignment="Center"
                                LargeChange="0.01"
                                Maximum="1"
                                Minimum="0.6"
                                SmallChange="0.001"
                                Value="{Binding ExpectedAccuracy}" />
                        <TextBlock Margin="5"
                                   VerticalAlignment="Center"
                                   Text="Expected PP:" />
                        <TextBlock Margin="5"
                                   VerticalAlignment="Center"
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   Text="{Binding ExpectedPerformancePoints,
                                                  StringFormat=\{0:N2\}pp}" />
                    </UniformGrid>
                </StackPanel>
            </TabItem>

            <TabItem Header="About">
                <StackPanel>
                    <TextBlock Margin="5" FontSize="16">
                        <Run FontWeight="SemiBold" Text="osu!helper" />
                        <Run Text="is an open-source tool, developed by Tyrrrz" />
                        <LineBreak />
                        <Hyperlink NavigateUri="https://github.com/Tyrrrz/osu-helper" RequestNavigate="Hyperlink_OnRequestNavigate">osu!helper on GitHub</Hyperlink>
                        <LineBreak />
                        <Hyperlink NavigateUri="https://osu.ppy.sh/forum/t/492556" RequestNavigate="Hyperlink_OnRequestNavigate">osu!helper on osu! forum</Hyperlink>
                        <LineBreak />
                        <Hyperlink NavigateUri="https://osu.ppy.sh/u/7611297" RequestNavigate="Hyperlink_OnRequestNavigate">Tyrrrz on osu!</Hyperlink>
                        <LineBreak />
                        <Hyperlink NavigateUri="http://www.tyrrrz.me" RequestNavigate="Hyperlink_OnRequestNavigate">http://www.tyrrrz.me</Hyperlink>
                        <LineBreak />
                        <Run Text="If you have any suggestions or problems - feel free to message me" />
                    </TextBlock>
                </StackPanel>
            </TabItem>
        </dragablz:TabablzControl>

        <Popup x:Name="BeatmapInfoPopup"
               Width="350"
               Height="400"
               AllowsTransparency="True"
               Closed="BeatmapInfoPopup_Closed"
               DataContext="{Binding RecommenderViewModel,
                                     Source={StaticResource Locator}}"
               Focusable="False"
               Opened="BeatmapInfoPopup_Opened"
               Placement="Left"
               PlacementTarget="{Binding ElementName=BeatmapListDataGrid}"
               PopupAnimation="Fade"
               StaysOpen="False">
            <materialDesign:Card HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" Background="{DynamicResource PrimaryHueMidBrush}">
                        <TextBlock Margin="10"
                                   HorizontalAlignment="Center"
                                   FontSize="15"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource PrimaryHueLightForegroundBrush}"
                                   Text="{Binding SelectedRecommendation.Beatmap.FullName}"
                                   TextTrimming="CharacterEllipsis"
                                   TextWrapping="NoWrap" />
                    </Border>

                    <Image Grid.Row="1"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Cursor="Hand"
                           Source="{Binding SelectedRecommendation.Beatmap.ThumbnailURL}"
                           Stretch="UniformToFill"
                           StretchDirection="Both">
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="MouseLeftButtonUp">
                                <i:InvokeCommandAction Command="{Binding SoundPreviewBeatmapCommand}" CommandParameter="{Binding SelectedRecommendation.Beatmap}" />
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                    </Image>

                    <DockPanel Grid.Row="2"
                               Margin="5"
                               HorizontalAlignment="Stretch">
                        <WrapPanel HorizontalAlignment="Left" DockPanel.Dock="Left">
                            <TextBlock Text="Last Update: " />
                            <TextBlock FontWeight="SemiBold" Text="{Binding SelectedRecommendation.Beatmap.LastUpdateDate, StringFormat=\{0:MMMM d\, yyyy\}}" />
                        </WrapPanel>
                        <WrapPanel HorizontalAlignment="Right" DockPanel.Dock="Right">
                            <TextBlock Text="Creator: " />
                            <TextBlock FontWeight="SemiBold" Text="{Binding SelectedRecommendation.Beatmap.Creator}" />
                        </WrapPanel>
                    </DockPanel>

                    <Grid Grid.Row="3"
                          Margin="5"
                          HorizontalAlignment="Stretch"
                          Background="Transparent"
                          ToolTip="{Binding SelectedRecommendation.Beatmap.ExtendedDifficultyInfoString}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Row="0"
                                   Grid.Column="0"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Text="★" />
                        <TextBlock Grid.Row="0"
                                   Grid.Column="1"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Text="AR" />
                        <TextBlock Grid.Row="0"
                                   Grid.Column="2"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Text="OD" />
                        <TextBlock Grid.Row="0"
                                   Grid.Column="3"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Text="BPM" />
                        <TextBlock Grid.Row="0"
                                   Grid.Column="4"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Text="Length" />
                        <TextBlock Grid.Row="0"
                                   Grid.Column="5"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Text="Combo" />

                        <TextBlock Grid.Row="1"
                                   Grid.Column="0"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   FontWeight="SemiBold"
                                   Text="{Binding SelectedRecommendation.Beatmap.Stars,
                                                  StringFormat=\{0:N2\}}" />
                        <TextBlock Grid.Row="1"
                                   Grid.Column="1"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   FontWeight="SemiBold"
                                   Text="{Binding SelectedRecommendation.Beatmap.ApproachRate,
                                                  StringFormat=\{0:N1\}}" />
                        <TextBlock Grid.Row="1"
                                   Grid.Column="2"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   FontWeight="SemiBold"
                                   Text="{Binding SelectedRecommendation.Beatmap.OverallDifficulty,
                                                  StringFormat=\{0:N1\}}" />
                        <TextBlock Grid.Row="1"
                                   Grid.Column="3"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   FontWeight="SemiBold"
                                   Text="{Binding SelectedRecommendation.Beatmap.BeatsPerMinute,
                                                  StringFormat=\{0:N0\}}" />
                        <TextBlock Grid.Row="1"
                                   Grid.Column="4"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   FontWeight="SemiBold"
                                   Text="{Binding SelectedRecommendation.Beatmap.HitLengthString}" />
                        <TextBlock Grid.Row="1"
                                   Grid.Column="5"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   FontWeight="SemiBold"
                                   Text="{Binding SelectedRecommendation.Beatmap.MaxCombo}" />
                    </Grid>

                    <UniformGrid Grid.Row="4"
                                 Margin="5"
                                 Columns="2">
                        <Button Margin="2"
                                Command="{Binding OpenBeatmapPageCommand}"
                                CommandParameter="{Binding SelectedRecommendation.Beatmap}"
                                Content="Page" />
                        <Button Margin="2"
                                Command="{Binding DirectDownloadBeatmapCommand}"
                                CommandParameter="{Binding SelectedRecommendation.Beatmap}"
                                Content="osu!direct" />
                        <Button Margin="2"
                                Command="{Binding DownloadBeatmapCommand}"
                                CommandParameter="{Binding SelectedRecommendation.Beatmap}"
                                Content="Download" />
                        <Button Margin="2"
                                Command="{Binding BloodcatDownloadBeatmapCommand}"
                                CommandParameter="{Binding SelectedRecommendation.Beatmap}"
                                Content="Bloodcat" />
                    </UniformGrid>
                </Grid>
            </materialDesign:Card>
        </Popup>
    </Grid>
</Window>

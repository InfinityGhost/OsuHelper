<Window x:Class="OsuHelper.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:ignore="http://www.galasoft.ch/ignore"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="osu!helper"
        Width="600"
        Height="500"
        Background="{DynamicResource MaterialDesignPaper}"
        DataContext="{Binding SetupViewModel,
                              Source={StaticResource Locator}}"
        FontFamily="{DynamicResource MaterialDesignFont}"
        SnapsToDevicePixels="True"
        TextElement.FontSize="13"
        TextElement.FontWeight="Regular"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        WindowStartupLocation="CenterScreen"
        mc:Ignorable="d ignore">

    <Grid>
        <TabControl>

            <TabItem Header="Setup">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <GroupBox Grid.Row="0"
                              Margin="5"
                              Header="Core">
                        <StackPanel>
                            <TextBlock Margin="5" Text="osu! Username or UserID:" />
                            <TextBox Margin="5" />
                            <TextBlock Margin="5" Text="API key:" />
                            <TextBox Margin="5" />
                        </StackPanel>
                    </GroupBox>

                    <GroupBox Grid.Row="1"
                              Margin="5"
                              Header="Preferences">
                        <StackPanel />
                    </GroupBox>

                    <UniformGrid Grid.Row="2"
                                 Margin="5"
                                 HorizontalAlignment="Center"
                                 Columns="3">
                        <Button Margin="2" Content="Save" />
                        <Button Margin="2" Content="Reverse" />
                        <Button Margin="2" Content="Defaults" />
                    </UniformGrid>
                </Grid>
            </TabItem>

            <TabItem Header="Recommended Maps">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <DataGrid x:Name="BeatmapListDataGrid"
                              Grid.Row="0"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              CanUserDeleteRows="False"
                              CanUserResizeRows="False"
                              IsReadOnly="True"
                              SelectionChanged="BeatmapListDataGrid_SelectionChanged">
                        <DataGrid.Columns>
                            <DataGridTextColumn Binding="{x:Null}" Header="Map Name" />
                            <DataGridTextColumn Binding="{x:Null}" Header="Mods" />
                            <DataGridTextColumn Binding="{x:Null}" Header="BPM" />
                            <DataGridTextColumn Binding="{x:Null}" Header="AR" />
                            <DataGridTextColumn Binding="{x:Null}" Header="OD" />
                            <DataGridTextColumn Binding="{x:Null}"
                                                FontWeight="SemiBold"
                                                Header="Accuracy" />
                            <DataGridTextColumn Binding="{x:Null}"
                                                FontWeight="SemiBold"
                                                Header="PP" />
                        </DataGrid.Columns>
                    </DataGrid>

                    <UniformGrid Grid.Row="1"
                                 Margin="5"
                                 HorizontalAlignment="Right"
                                 Columns="1">
                        <Button Margin="2" Content="Update" />
                    </UniformGrid>
                </Grid>
            </TabItem>
        </TabControl>

        <Popup x:Name="BeatmapInfoPopup"
               Width="300"
               Height="300"
               Placement="MousePoint">
            <materialDesign:Card HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" Background="{DynamicResource PrimaryHueMidBrush}">
                        <TextBlock Margin="5"
                                   HorizontalAlignment="Center"
                                   TextTrimming="CharacterEllipsis"
                                   TextWrapping="NoWrap" />
                    </Border>

                    <Image Grid.Row="1" />

                    <Grid Grid.Row="2" Margin="5">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Row="0"
                                   Grid.Column="0"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Text="★" />
                        <TextBlock Grid.Row="0"
                                   Grid.Column="1"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Text="AR" />
                        <TextBlock Grid.Row="0"
                                   Grid.Column="2"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Text="OD" />
                        <TextBlock Grid.Row="0"
                                   Grid.Column="3"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Text="BPM" />

                        <TextBlock Grid.Row="1"
                                   Grid.Column="0"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Text="" />
                        <TextBlock Grid.Row="1"
                                   Grid.Column="1"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Text="" />
                        <TextBlock Grid.Row="1"
                                   Grid.Column="2"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Text="" />
                        <TextBlock Grid.Row="1"
                                   Grid.Column="3"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Text="" />
                    </Grid>

                    <UniformGrid Grid.Row="3"
                                 Margin="5"
                                 Columns="2">
                        <Button Margin="2" Content="Beatmap Page" />
                        <Button Margin="2" Content="Download" />
                    </UniformGrid>
                </Grid>
            </materialDesign:Card>
        </Popup>
    </Grid>
</Window>

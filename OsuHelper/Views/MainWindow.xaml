<Window x:Class="OsuHelper.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:ignore="http://www.galasoft.ch/ignore"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="osu!helper"
        Width="750"
        Height="600"
        Background="{DynamicResource MaterialDesignPaper}"
        DataContext="{Binding SetupViewModel,
                              Source={StaticResource Locator}}"
        FontFamily="{DynamicResource MaterialDesignFont}"
        LocationChanged="MainWindow_OnLocationChanged"
        SizeChanged="MainWindow_OnSizeChanged"
        SnapsToDevicePixels="True"
        TextElement.FontSize="13"
        TextElement.FontWeight="Regular"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        WindowStartupLocation="CenterScreen"
        mc:Ignorable="d ignore">

    <Grid>
        <TabControl x:Name="TabControl">
            <TabItem DataContext="{Binding SetupViewModel, Source={StaticResource Locator}}" Header="Setup">
                <ScrollViewer>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <GroupBox Grid.Row="0"
                                  Margin="5"
                                  Header="Core">
                            <StackPanel>
                                <TextBlock Margin="5" Text="osu! Username or UserID:" />
                                <TextBox Margin="5"
                                         FontWeight="SemiBold"
                                         Text="{Binding Settings.UserID,
                                                        UpdateSourceTrigger=PropertyChanged}" />
                                <TextBlock Margin="5" Text="API key:" />
                                <TextBox Margin="5"
                                         FontWeight="SemiBold"
                                         Text="{Binding Settings.APIKey,
                                                        UpdateSourceTrigger=PropertyChanged}" />
                            </StackPanel>
                        </GroupBox>

                        <GroupBox Grid.Row="1"
                                  Margin="5"
                                  Header="Preferences">
                            <StackPanel>
                                <TextBlock Margin="5" Text="How many of your top plays to scan?" />
                                <TextBox Margin="5"
                                         FontWeight="SemiBold"
                                         Text="{Binding Settings.OwnPlayCountToScan,
                                                        UpdateSourceTrigger=PropertyChanged}" />
                                <TextBlock Margin="5" Text="How many of others' top plays to scan?" />
                                <TextBox Margin="5"
                                         FontWeight="SemiBold"
                                         Text="{Binding Settings.OthersPlayCountToScan,
                                                        UpdateSourceTrigger=PropertyChanged}" />
                                <TextBlock Margin="5" Text="How many similar plays per one of your play?" />
                                <TextBox Margin="5"
                                         FontWeight="SemiBold"
                                         Text="{Binding Settings.SimilarPlayCount,
                                                        UpdateSourceTrigger=PropertyChanged}" />
                            </StackPanel>
                        </GroupBox>

                        <UniformGrid Grid.Row="2"
                                     Margin="5"
                                     HorizontalAlignment="Center"
                                     VerticalAlignment="Bottom"
                                     Columns="3">
                            <Button Margin="2"
                                    Command="{Binding SaveCommand}"
                                    Content="Save" />
                            <Button Margin="2"
                                    Command="{Binding LoadCommand}"
                                    Content="Cancel" />
                            <Button Margin="2"
                                    Command="{Binding ResetDefaultsCommand}"
                                    Content="Defaults" />
                        </UniformGrid>
                    </Grid>
                </ScrollViewer>
            </TabItem>

            <TabItem DataContext="{Binding RecommenderViewModel,
                                           Source={StaticResource Locator}}"
                     FocusManager.FocusedElement="{Binding ElementName=BeatmapListDataGrid}"
                     Header="Recommended Maps">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <DataGrid x:Name="BeatmapListDataGrid"
                              Grid.Row="0"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              CanUserDeleteRows="False"
                              CanUserResizeRows="False"
                              ColumnWidth="SizeToHeader"
                              HorizontalScrollBarVisibility="Disabled"
                              IsReadOnly="True"
                              ItemsSource="{Binding Recommendations}"
                              MouseLeftButtonUp="BeatmapListDataGrid_MouseLeftButtonUp"
                              SelectedItem="{Binding SelectedRecommendation}"
                              SelectionMode="Single"
                              SelectionUnit="FullRow">

                        <DataGrid.Columns>
                            <DataGridTextColumn Width="*"
                                                Binding="{Binding Beatmap.FullName}"
                                                FontStyle="Italic"
                                                Header="Map Name" />
                            <DataGridTextColumn Width="Auto"
                                                Binding="{Binding ModsString}"
                                                Header="Mods" />
                            <DataGridTextColumn Width="Auto"
                                                Binding="{Binding Beatmap.Stars,
                                                                  StringFormat=\{0:N2\}}"
                                                Header="★" />
                            <DataGridTextColumn Width="Auto"
                                                Binding="{Binding Beatmap.BeatsPerMinute,
                                                                  StringFormat=\{0:N0\}}"
                                                Header="BPM" />
                            <DataGridTextColumn Width="Auto"
                                                Binding="{Binding Beatmap.ApproachRate,
                                                                  StringFormat=\{0:N1\}}"
                                                Header="AR" />
                            <DataGridTextColumn Width="Auto"
                                                Binding="{Binding Beatmap.OverallDificulty,
                                                                  StringFormat=\{0:N1\}}"
                                                Header="OD" />
                            <DataGridTextColumn Width="Auto"
                                                Binding="{Binding Beatmap.HitLengthString}"
                                                Header="Length" />
                            <DataGridTextColumn Width="Auto"
                                                Binding="{Binding ExpectedAccuracy,
                                                                  StringFormat=\{0:P2\}}"
                                                FontWeight="SemiBold"
                                                Header="Accuracy" />
                            <DataGridTextColumn Width="Auto"
                                                Binding="{Binding ExpectedPerformancePoints,
                                                                  StringFormat=\{0:N2\}}"
                                                FontWeight="SemiBold"
                                                Header="PP" />
                        </DataGrid.Columns>
                    </DataGrid>



                    <UniformGrid Grid.Row="1"
                                 Margin="5"
                                 HorizontalAlignment="Right"
                                 Columns="1">
                        <Button Margin="2"
                                Command="{Binding UpdateCommand}"
                                Content="Update" />
                    </UniformGrid>

                    <ProgressBar Grid.Row="2"
                                 Foreground="{DynamicResource SecondaryAccentForegroundBrush}"
                                 Maximum="1"
                                 Minimum="0"
                                 Visibility="{Binding IsBusy,
                                                      Converter={StaticResource BoolToVisibilityConverter}}"
                                 Value="{Binding Progress}" />
                </Grid>
            </TabItem>
        </TabControl>

        <Popup x:Name="BeatmapInfoPopup"
               Width="350"
               Height="350"
               AllowsTransparency="True"
               DataContext="{Binding RecommenderViewModel,
                                     Source={StaticResource Locator}}"
               Focusable="False"
               Placement="Left"
               PlacementTarget="{Binding ElementName=BeatmapListDataGrid}"
               PopupAnimation="Fade"
               StaysOpen="False">
            <materialDesign:Card HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" Background="{DynamicResource PrimaryHueMidBrush}">
                        <TextBlock Margin="10"
                                   HorizontalAlignment="Center"
                                   FontSize="15"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource PrimaryHueLightForegroundBrush}"
                                   Text="{Binding SelectedRecommendation.Beatmap.FullName}"
                                   TextTrimming="CharacterEllipsis"
                                   TextWrapping="NoWrap" />
                    </Border>

                    <Image Grid.Row="1"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Source="{Binding SelectedRecommendation.Beatmap.ThumbnailURL}"
                           Stretch="UniformToFill"
                           StretchDirection="Both" />

                    <DockPanel Grid.Row="2"
                               Margin="5"
                               HorizontalAlignment="Stretch">
                        <WrapPanel HorizontalAlignment="Left" DockPanel.Dock="Left">
                            <TextBlock Text="Last Update: " />
                            <TextBlock FontWeight="SemiBold" Text="{Binding SelectedRecommendation.Beatmap.LastUpdateDate, StringFormat=\{0:MMMM d\, yyyy\}}" />
                        </WrapPanel>
                        <WrapPanel HorizontalAlignment="Right" DockPanel.Dock="Right">
                            <TextBlock Text="Creator: " />
                            <TextBlock FontWeight="SemiBold" Text="{Binding SelectedRecommendation.Beatmap.Creator}" />
                        </WrapPanel>
                    </DockPanel>

                    <Grid Grid.Row="3"
                          Margin="5"
                          HorizontalAlignment="Stretch">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Row="0"
                                   Grid.Column="0"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Text="★" />
                        <TextBlock Grid.Row="0"
                                   Grid.Column="1"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Text="AR" />
                        <TextBlock Grid.Row="0"
                                   Grid.Column="2"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Text="OD" />
                        <TextBlock Grid.Row="0"
                                   Grid.Column="3"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Text="BPM" />
                        <TextBlock Grid.Row="0"
                                   Grid.Column="4"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Text="Length" />
                        <TextBlock Grid.Row="0"
                                   Grid.Column="5"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Text="Combo" />

                        <TextBlock Grid.Row="1"
                                   Grid.Column="0"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   FontWeight="SemiBold"
                                   Text="{Binding SelectedRecommendation.Beatmap.Stars,
                                                  StringFormat=\{0:N2\}}" />
                        <TextBlock Grid.Row="1"
                                   Grid.Column="1"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   FontWeight="SemiBold"
                                   Text="{Binding SelectedRecommendation.Beatmap.ApproachRate,
                                                  StringFormat=\{0:N1\}}" />
                        <TextBlock Grid.Row="1"
                                   Grid.Column="2"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   FontWeight="SemiBold"
                                   Text="{Binding SelectedRecommendation.Beatmap.OverallDificulty,
                                                  StringFormat=\{0:N1\}}" />
                        <TextBlock Grid.Row="1"
                                   Grid.Column="3"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   FontWeight="SemiBold"
                                   Text="{Binding SelectedRecommendation.Beatmap.BeatsPerMinute,
                                                  StringFormat=\{0:N0\}}" />
                        <TextBlock Grid.Row="1"
                                   Grid.Column="4"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   FontWeight="SemiBold"
                                   Text="{Binding SelectedRecommendation.Beatmap.HitLengthString}" />
                        <TextBlock Grid.Row="1"
                                   Grid.Column="5"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   FontWeight="SemiBold"
                                   Text="{Binding SelectedRecommendation.Beatmap.MaxCombo}" />
                    </Grid>

                    <UniformGrid Grid.Row="4"
                                 Margin="5"
                                 Columns="3">
                        <Button Margin="2"
                                Command="{Binding OpenBeatmapPageCommand}"
                                CommandParameter="{Binding SelectedRecommendation.Beatmap}"
                                Content="Profile" />
                        <Button Margin="2"
                                Command="{Binding DownloadBeatmapCommand}"
                                CommandParameter="{Binding SelectedRecommendation.Beatmap}"
                                Content="Download" />
                        <Button Margin="2"
                                Command="{Binding BloodcatDownloadBeatmapCommand}"
                                CommandParameter="{Binding SelectedRecommendation.Beatmap}"
                                Content="Bloodcat" />
                    </UniformGrid>
                </Grid>
            </materialDesign:Card>
        </Popup>
    </Grid>
</Window>
